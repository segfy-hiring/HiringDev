<?xml version="1.0" encoding="utf-8"?>

<nlog
  xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  autoReload="true">
  <variable name="systemName" value="@projectName" />

  <extensions>
    <add assembly="NLog.Web.AspNetCore" />
  </extensions>

  <targets async="true">
    <target name="dataBaseLog" xsi:type="Database">
      <connectionString>
        Data Source=CT0BD03;Initial Catalog=LOGSNLOG;User Id=logsnlog;Password=logsnlogdev;
      </connectionString>
      <commandText>
        INSERT INTO [dbo].[system_logging] (
        [log_application],
        [log_date],
        [log_level],
        [log_logger],
        [log_message],
        [log_machine_name],
        [log_user_name],
        [log_call_site],
        [log_thread],
        [log_exception],
        [log_stacktrace])
        VALUES(
        @application,
        @time_stamp,
        @level,
        @logger,
        @message,
        @machinename,
        @user_name,
        @call_site,
        @threadid,
        @log_exception,
        @stacktrace);
      </commandText>
      <parameter name="@application" layout="${systemName}"/>
      <parameter name="@time_stamp" layout="${longdate}"/>
      <parameter name="@level" layout="${level}"/>
      <parameter name="@logger" layout="${logger}"/>
      <parameter name="@message" layout="${message}"/>
      <parameter name="@machinename" layout="${machinename}"/>
      <parameter name="@user_name" layout="${windows-identity:domain=true}"/>
      <parameter name="@call_site" layout="${callsite:filename=true}"/>
      <parameter name="@threadid" layout="${threadid}"/>
      <parameter name="@log_exception" layout="${exception}"/>
      <parameter name="@stacktrace" layout="${stacktrace}"/>
    </target>
  </targets>
  <rules>
    <logger name="*" minlevel="Error" appendTo="dataBaseLog" />
    <logger name="LogWSError" minlevel="Trace" appendTo="dataBaseLog" />
    <logger name="LogWSInfo" appendTo="dataBaseLog" />
  </rules>
</nlog>
