@{
    var searchActive = ViewData["Active-Page"]?.ToString() == "search" ? "active" : "";
    var historyActive = ViewData["Active-Page"]?.ToString() == "history" ? "active" : "";
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>

    <link rel="shortcut icon" href="~/img/faketube-icon.png">

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/fa/css/font-awesome-4.6.3.min.css">

    <script type="text/javascript" src="~/lib/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/js/bootstrap.min.js"></script>
</head>
<body style="padding: 15px 0; background-color: #ecf0f5;">
    <div class="container">

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="~/img/faketube-icon.png" height="32" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @searchActive" aria-current="page" href="/Youtube/Search">Pesquisar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @historyActive" href="/Youtube/History">Histórico</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        @RenderBody()
    </div>
</body>
</html>