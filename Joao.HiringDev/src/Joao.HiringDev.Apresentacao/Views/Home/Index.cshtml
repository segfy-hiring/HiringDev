@model Joao.HiringDev.Apresentacao.Models.Home.FiltroHomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Bem-Vindo!</h1>
    <p>Buscador de vídeos e canais do Youtube desenvolvido com ASP.NET Core.</p>

    <hr />

</div>

<form asp-action="Index" asp-controller="Home" method="get">

    <div class="row">
        <div class="col col-12">
            <p>Informa uma palavra-chave ou uma frase para busca 50 primeiros registros de vídeos e/ou canais realacionados (os registros serão armazenados no banco)</p>
        </div>
    </div>

    <div class="row">
        <div class="col col-9">
            @Html.EditorFor(m => m.PalavraChave, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            @Html.ValidationMessageFor(m => m.PalavraChave, "", new { @class = "text-danger" })
        </div>

        <div class="col col-3">
            <button type="submit" class="btn btn-dark col-12 btn-block mb-3"><i class="fas fa-cloud"></i> Pesquisar na API </button>
        </div>
    </div>

    <div class="row">
        <div class="col col-12">
            <p>Para ver os vídeos e canais armazenados na base de dados, basta clicar  <a href="@Url.Action("ExibirBase", "Home")" target="_blank"> neste link </a> </p>
        </div>
    </div>

</form>

@if (Model.YoutubeApiServico != null)
{
    @if (Model.YoutubeApiServico.Videos != null && Model.YoutubeApiServico.Canais != null)
    {
        <div class="row">

            <div class="col g-4">
                <div class="card">
                    <div class="card-body">
                    <h5 class="card-title">Canais</h5>
                        @if (Model.YoutubeApiServico.Canais != null && Model.YoutubeApiServico.Canais.Any())
                        {
                            <table class="table table-striped table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Título</th>
                                        <th scope="col">Descrição</th>
                                        <th scope="col">Criação</th>
                                        <th scope="col"></th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var canal in Model.YoutubeApiServico.Canais)
                                    {
                                        <tr>
                                            <td>
                                                @canal.Title
                                            </td>
                                            <td>
                                                <a href="@Url.Action("CanalDetalhar", "Home", new { id = canal.Id })" target="_blank"> Mais Informações </a>
                                            </td>
                                            <td>
                                                <a href="https://www.youtube.com/channel/@canal.Id" target="_blank">Link</a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="alert alert-info" role="alert">
                                Não foi encontra registros para a sua busca!
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col g-4">
                <div class="card">
                    <div class="card-body">
                    <h5 class="card-title">Videos</h5>
                        @if (Model.YoutubeApiServico.Videos != null && Model.YoutubeApiServico.Videos.Any())
                        {
                            <table class="table table-striped table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Título</th>
                                        <th scope="col"></th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var video in Model.YoutubeApiServico.Videos)
                                    {
                                        <tr>

                                            <td>
                                                @video.Title
                                            </td>
                                            <td>
                                                <a href="@Url.Action("VideoDetalhar", "Home", new { id = video.Id })" target="_blank"> Mais Informações </a>
                                            </td>
                                            <td>
                                                <a href="https://www.youtube.com/watch?v=@video.Id" target="_blank">Link</a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="alert alert-info" role="alert">
                                Não foi encontra registros para a sua busca!
                            </div>
                        }

                    </div>
                </div>
            </div>

        </div>

    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="alert alert-info" role="alert">
                    Não foi encontra registros para a sua busca!
                </div>
            </div>
        </div>
    }


}
