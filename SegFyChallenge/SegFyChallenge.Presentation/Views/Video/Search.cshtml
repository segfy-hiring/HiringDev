@model List<VideoViewModel>

@{
    ViewData["Title"] = "Search - Video";
}

<form>
  <div class="form-group row">
    <div class="col-sm-10">
      <input type="text" name="queryText" class="form-control" placeholder="Search Videos on Youtube">
    </div>
    <div class="col-sm-2">
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
  </div>
</form>

@if(Model != null && Model.Count > 0)
{
    <table class=" table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Published At</th>
                <th scope="col">Video Id</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    string linkToVideo = "https://www.youtube.com/watch?v=" + item.VideoId;
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.PublishedAt</td>
                        <td>@item.VideoId</td>
                        <td><a href="@linkToVideo" target="_blank">Go To Video</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>

}
