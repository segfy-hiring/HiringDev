
@model List<VideoViewModel>

@{
    ViewData["Title"] = "In Database - Video";
}

@if(Model != null && Model.Count > 0)
{
    <table class=" table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Published At</th>
                <th scope="col">Video Id</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.PublishedAt</td>
                        <td>@item.VideoId</td>
                        <td><a class="btn btn-primary" asp-controller="Video" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>

} 
else
{
    <p>Data not found...</p>
}
